-- SAFE LOAD
----------------------------------------------------
local function safeLoad(url)
	task.spawn(function()
		pcall(function()
			loadstring(game:HttpGet(url,true))()
		end)
	end)
end

----------------------------------------------------
-- LOADING SCREEN (TIDAK DIUBAH)
----------------------------------------------------
local Loader = Instance.new("ScreenGui", PG)
Loader.Name = "ZOY_HUB"

local LBG = Instance.new("ImageLabel", Loader)
LBG.Size = UDim2.fromScale(1,1)
LBG.BackgroundTransparency = 1
LBG.Image = "rbxassetid://73276197559846"
LBG.ImageTransparency = 1
LBG.ScaleType = Enum.ScaleType.Crop

TweenService:Create(LBG,TweenInfo.new(0.8),{ImageTransparency=0}):Play()
task.wait(1.5)
TweenService:Create(LBG,TweenInfo.new(0.6),{ImageTransparency=1}):Play()
task.wait(0.6)
Loader:Destroy()

----------------------------------------------------
-- ROOT GUI (FIX PENTING)
----------------------------------------------------
local GUI = Instance.new("ScreenGui", PG)
GUI.Name = "ZOY_HUB"
GUI.ResetOnSpawn = false

----------------------------------------------------
-- CLICK SOUND
----------------------------------------------------
local ClickSound = Instance.new("Sound", GUI)
ClickSound.SoundId = "rbxassetid://9118823101"
ClickSound.Volume = 1
local function Click() ClickSound:Play() end

----------------------------------------------------
-- TOGGLE ICON
----------------------------------------------------
local Toggle = Instance.new("ImageButton", GUI)
Toggle.Size = UDim2.new(0,56,0,56)
Toggle.Position = UDim2.new(0,20,0.5,-28)
Toggle.BackgroundTransparency = 1
Toggle.Image = "rbxassetid://98554706818596"

do
	local drag,start,pos
	Toggle.InputBegan:Connect(function(i)
		if i.UserInputType==Enum.UserInputType.MouseButton1 then
			drag=true; start=i.Position; pos=Toggle.Position
		end
	end)
	UIS.InputChanged:Connect(function(i)
		if drag and i.UserInputType==Enum.UserInputType.MouseMovement then
			local d=i.Position-start
			Toggle.Position=UDim2.new(pos.X.Scale,pos.X.Offset+d.X,pos.Y.Scale,pos.Y.Offset+d.Y)
		end
	end)
	UIS.InputEnded:Connect(function(i)
		if i.UserInputType==Enum.UserInputType.MouseButton1 then drag=false end
	end)
end

----------------------------------------------------
-- MAIN FRAME
----------------------------------------------------
local Main = Instance.new("ImageLabel", GUI)
Main.Visible = false
Main.BackgroundTransparency = 1
Main.Image = "rbxassetid://104456784959465"
Main.ScaleType = Enum.ScaleType.Crop
Instance.new("UICorner",Main).CornerRadius = UDim.new(0,18)
local Stroke = Instance.new("UIStroke", Main)
Stroke.Thickness = 2

local function Resize()
	local v = Camera.ViewportSize
	local w = math.clamp(v.X*0.75,520,720)
	local h = math.clamp(v.Y*0.72,360,460)
	Main.Size = UDim2.new(0,w,0,h)
	Main.Position = UDim2.new(0.5,-w/2,0.5,-h/2)
end
Resize()
Camera:GetPropertyChangedSignal("ViewportSize"):Connect(Resize)

RunService.RenderStepped:Connect(function()
	Stroke.Color = Color3.fromHSV((tick()%6)/6,1,1)
end)

Toggle.MouseButton1Click:Connect(function()
	Click()
	Main.Visible = not Main.Visible
end)

