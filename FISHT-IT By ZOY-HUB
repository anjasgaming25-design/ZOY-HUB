-- PLAYER
----------------------------------------------------
local function hum()
	return LP.Character and LP.Character:FindFirstChildOfClass("Humanoid")
end

local function Btn(text,cb)
	local b = Instance.new("TextButton", Pages.Player)
	b.Size = UDim2.new(1,-20,0,40)
	b.Text = text
	b.Font = Enum.Font.GothamBold
	b.TextSize = 14
	b.TextColor3 = Color3.fromRGB(200,230,255)
	b.BackgroundColor3 = Color3.fromRGB(30,70,110)
	Instance.new("UICorner",b).CornerRadius = UDim.new(0,10)
	b.MouseButton1Click:Connect(function()
		Click()
		cb()
	end)
end

Btn("Speed +10",function() if hum() then hum().WalkSpeed += 10 end end)
Btn("Jump +20",function() if hum() then hum().JumpPower += 20 end end)
Btn("Rejoin",function() TeleportService:Teleport(game.PlaceId,LP) end)

