local Content = Instance.new("Frame", Main)
Content.Size = UDim2.new(1,-180,1,-54)
Content.Position = UDim2.new(0,170,0,45)
Content.BackgroundTransparency = 1

local Pages = {}

local function NewPage()
	local p = Instance.new("ScrollingFrame", Content)
	p.Size = UDim2.new(1,0,1,0)
	p.ScrollBarThickness = 6
	p.BackgroundTransparency = 1
	p.Visible = false

	local list = Instance.new("UIListLayout", p)
	list.Padding = UDim.new(0,10)
	list:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
		p.CanvasSize = UDim2.new(0,0,0,list.AbsoluteContentSize.Y + 20)
	end)

	return p
end

Pages.Home   = NewPage()
Pages.Rules  = NewPage()
Pages.Fish   = NewPage()
Pages.Player = NewPage()

local function Show(name)
	for k,v in pairs(Pages) do
		v.Visible = (k == name)
	end
end

----------------------------------------------------
-- TAB BUTTON
----------------------------------------------------
local function Tab(text,y,page)
	local b = Instance.new("TextButton", Sidebar)
	b.Size = UDim2.new(1,-20,0,40)
	b.Position = UDim2.new(0,10,0,y)
	b.Text = text
	b.Font = Enum.Font.GothamBold
	b.TextSize = 14
	b.TextColor3 = Color3.fromRGB(200,230,255)
	b.BackgroundColor3 = Color3.fromRGB(40,80,120)
	Instance.new("UICorner",b).CornerRadius = UDim.new(0,10)
	b.MouseButton1Click:Connect(function()
		Click()
		Show(page)
	end)
end

